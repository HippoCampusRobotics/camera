<launch>
    <arg name="camera_info_url" default="file://$(find hardware_interfaces)/config/calib_ov9281_00.yaml" />
    <arg name="camera_name" default="ov9281_00" />
    <arg name="camera_frame_id" default="camera_frame" />
    <arg name="framerate" default="10" />
    <arg name="base_topic" default="image" />

    <node pkg="hardware_interfaces" type="camera_node" name="$(arg camera_name)">
        <param name="camera_name" value="$(arg camera_name)" />
        <param name="camera_frame_id" value="$(arg camera_frame_id)" />
        <param name="camera_info_url" value="$(arg camera_info_url)" />

        <rosparam param="disable_pub_plugins" subst_value="True">
            - "$(arg base_topic)/image_transport/compressedDepth"
            - "$(arg base_topic)/image_transport/theora"
        </rosparam>
    </node>
</launch>
